extends layout

block content
  h1= item.name
  if item.description
    p= item.description
  p Category 
    a(href=item.category.url) #{item.category.name}
  if item.brand
    p Brand 
      strong #{item.brand}
  p Usage 
    if item.gamer
      strong Gaming
    else
      strong Office
  p Stock 
    strong #{item.stock}
  p
    strong $#{item.price}
  
  hr
  p
    a(href=`${item.url}/update`) Update item
  p
    a(href=`${item.url}/delete`) Delete item
  